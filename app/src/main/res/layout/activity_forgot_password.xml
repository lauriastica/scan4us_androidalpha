<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal" android:background="@drawable/p01_background"
    android:layout_height="match_parent">

    <ImageView android:src="@drawable/p02_icon"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:layout_height="wrap_content" />

    <LinearLayout android:padding="16dp" android:layout_marginBottom="16dp"
        android:background="@color/md_blue_500"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView android:text="RECUPERA TU CONTRASEÃ‘A"
            android:textSize="20sp"
            android:textColor="@color/md_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView android:text="Email, nombre de usuario
o nombre completo"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout android:padding="16dp" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">

        <EditText android:hint="ej: scan4us@scan4us.com"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button android:text="Aceptar"
        android:layout_marginBottom="4dp"
        android:padding="16dp"
        android:textColor="@color/md_white"
        android:background="@drawable/p02_signup_selector"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button android:text="Cancelar"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        android:textColor="@color/md_white"
        android:background="@drawable/p02_login_selector"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <TextView android:text="No puedo identificar mi cuenta"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_height="wrap_content" />

</LinearLayout>