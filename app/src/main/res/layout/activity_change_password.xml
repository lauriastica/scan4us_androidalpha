<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal" android:background="@drawable/p01_background"
    android:layout_height="match_parent">

    <ImageView android:src="@drawable/p02_icon"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout android:padding="16dp"
        android:background="@color/md_blue_600"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView android:text="CAMBIAR CONTRASEÑA"
            android:textColor="@color/md_white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView android:text="Debe tener al menos 6
dígitos, mayúsculas,
minúsculas y dígitos."
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:text="Contraseña:"
            android:layout_weight="0.7"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout android:paddingLeft="16dp"
        android:layout_marginBottom="16dp"
        android:paddingRight="16dp" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:text="Repetir contraseña:"
            android:layout_weight="0.3"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button android:text="Aceptar" android:background="@drawable/p02_signup_selector"
        android:layout_width="wrap_content"
        android:textColor="@color/md_white"
        android:layout_height="wrap_content" />

</LinearLayout>