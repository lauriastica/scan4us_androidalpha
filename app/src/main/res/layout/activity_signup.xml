<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal" android:background="@drawable/p01_background"
    android:layout_height="match_parent">

    <ImageView android:src="@drawable/p02_icon"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:layout_height="wrap_content" />

    <LinearLayout android:padding="16dp"
        android:background="@color/md_blue_500"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView android:text="COMENCEMOS"
            android:textSize="28sp"
            android:textColor="@color/md_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout android:padding="16dp" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:hint="Correo Electronico"
            android:drawableLeft="@drawable/p02_ico_username"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" />

        <EditText android:hint="Numero celular"
            android:drawableLeft="@drawable/p02_ico_cel"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" />


        <EditText android:hint="ContraseÃ±a"
            android:drawableLeft="@drawable/p02_ico_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:gravity="center" android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox android:text="Acepto la"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text=" politica y condiciones de uso"
            android:layout_width="wrap_content"
            android:textColor="@color/md_blue_500"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button android:text="Crear cuenta"
        android:padding="16dp"
        android:textColor="@color/md_white"
        android:background="@drawable/p02_signup_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>